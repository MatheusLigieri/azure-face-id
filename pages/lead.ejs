        <!-- Argon Scripts -->
        <!-- Core -->
        <%- include('scripts'); %>
            <script>
                var xhr = new XMLHttpRequest();
                xhr.withCredentials = true;

                xhr.addEventListener("readystatechange", function () {
                    if (this.readyState === 4) {
                        JSONdata = JSON.parse(this.responseText);
                        console.log(JSONdata)
                        document.querySelector('.total-leads span').textContent = String(JSONdata.length);
                        var tbody = document.querySelector('.lead-table tbody');
                        JSONdata.forEach(data => {
                            var row = '<tr> <th scope="row">/argon/</th><td></td><td>' + data.email + '</td><td>' + data.phone + '</td></tr>'
                            tbody.innerHTML = tbody.innerHTML + row
                        });
                    }
                });

                xhr.open("GET", "http://localhost:8080/api/v1/person");

                xhr.send();
            </script>
